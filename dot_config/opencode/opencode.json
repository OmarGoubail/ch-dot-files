{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "leader": "ctrl+x",
    "editor_open": "<leader>e",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_unshare": "<leader>u",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "model_list": "<leader>m",
    "theme_list": "<leader>t",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "",
    "messages_page_up": "pgup",
    "messages_page_down": "pgdown",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "messages_copy": "<leader>y",
    "app_exit": "ctrl+c,<leader>q"
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
      "enabled": true
    }
  },
  "tools": {
    "figma": false
  },
  "agent": {
    "agent-figma": {
      "description": "Figma subagent. Uses the Figma MCP to read node context and help generate implementation-ready code.",
      "mode": "subagent",
      "model": "claude-haiku-4-5",
      "tools": {
        "figma": true,
        "write": false,
        "edit": false,
        "bash": false
      },
      "prompt": "You are a Figma specialist. When given a Figma URL, fetch node context via the Figma MCP and produce precise, minimal code following the projectâ€™s conventions."
    }
  }
}
